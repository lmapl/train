<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

  <bean id="redisService" class="com.train.service.common.impl.RedisServiceImpl">
    <!-- 哨兵host 多个用;号隔开 -->
    <constructor-arg index="0" value="${redis.sentinel}"/>
    <!-- 主节点名 -->
    <constructor-arg index="1" value="${redis.masterName}"/>
    <!-- 单个应用中的连接池取连接时最大等待时间，单位：ms -->
    <constructor-arg index="2" value="${redis.maxWaitMillis}"/>
    <!-- 单个应用中的连接池最大连接数 -->
    <constructor-arg index="3" value="${redis.maxTotal}"/>
    <!-- 单个应用中的连接池最小空闲数 -->
    <constructor-arg index="4" value="${redis.minIdle}"/>
    <!-- 单个应用中的连接池最大空闲数 -->
    <constructor-arg index="5" value="${redis.maxIdle}"/>
    <!-- 设置redis connect request response timeout 单位:ms -->
    <constructor-arg index="6" value="${redis.timeout}"/>
  </bean>
</beans>
